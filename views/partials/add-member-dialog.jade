md-dialog(aria-label='Add member', ng-cloak='', flex='80')
  form(name='frmAdd')
    md-toolbar
      .md-toolbar-tools
        md-icon.material-icons person_add
        h2 Add Memeber
        span(flex='')
        md-button.md-icon-button(ng-click='cancel()')
          md-icon.material-icons(aria-label='Close dialog') close
    md-dialog-content
      .md-dialog-content
        div(layout='row')
          div(flex='')
            md-input-container.md-block
              label Username
              input(ng-model='member.username', ng-required='true', ng-disabled='isUpdate')
          div(flex='')
            md-input-container.md-block
              label Password
              input(type='password', ng-model='member.password', ng-required='true', ng-disabled='isUpdate')
        div(layout='row')
          div(flex='')
            md-input-container.md-block
              label Fullname
              input(type='text', ng-model='member.fullname', ng-required='true')
          div(flex='')
            md-input-container
              label Group
              md-select(style='width: 250px;', ng-model='user.group_id')
                md-option(ng-repeat='group in groups', value='{{group.id}}')
                  | {{group.name}}
    md-dialog-actions(layout='row')
      span(flex='')
      md-button(ng-click='save()', ng-disabled='frmAdd.$invalid')
        | บันทึก
      md-button(ng-click='cancel()')
        | ยกเลิก
